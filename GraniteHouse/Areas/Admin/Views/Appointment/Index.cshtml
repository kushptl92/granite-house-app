@model GraniteHouse.ViewModel.AppointmentsVM

<form method="get">
    <br /><br />
    <h2 class="text-info">Appointment List</h2>
    <br />
    <hr />
    <div style="height:150px; background-color:aliceblue" class="container">
        <div class="col-12">
            <div class="row" style="padding-top:10px;">
                <div class="col-2">
                    Name
                </div>
                <div class="col-3">
                    @Html.Editor("SearchName", new { htmlAttribute = new { @class = "form-control" } })
                </div>
                <div class="col-2">

                </div>
                <div class="col-2">
                    Email
                </div>
                <div class="col-3">
                    @Html.Editor("SearchEmail", new { htmlAttribute = new { @class = "form-control" } })
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="row" style="padding-top:10px;">
                <div class="col-2">
                    Phone
                </div>
                <div class="col-3">
                    @Html.Editor("SearchPhone", new { htmlAttribute = new { @class = "form-control" } })
                </div>
                <div class="col-2">

                </div>
                <div class="col-2">
                    Date
                </div>
                <div class="col-3">
                    @Html.Editor("SearchDate", new { htmlAttribute = new { @class = "form-control", @id = "DateSearch" } })
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="row" style="padding-top:10px;">
                <div class="col-2">
                </div>
                <div class="col-3">
                </div>
                <div class="col-2">
                </div>
                <div class="col-2">
                </div>
                <div class="col-3">
                    <button type="submit" name="submit" value="Search" class="btn btn-primary form-control">
                        <i class="fas fa-search"></i> &nbsp; Search
                    </button>
                </div>
            </div>
        </div>
    </div>
    <br /><br />
    <div>
        <table class="table table-striped border">
            <tr class="table-info">
                <th>@Html.DisplayNameFor(m => m.appointments.FirstOrDefault().SalesPerson.Name)</th>
                <th>@Html.DisplayNameFor(m => m.appointments.FirstOrDefault().AppointmentDate)</th>
                <th>@Html.DisplayNameFor(m => m.appointments.FirstOrDefault().CustomerName)</th>
                <th>@Html.DisplayNameFor(m => m.appointments.FirstOrDefault().CustomerPhone)</th>
                <th>@Html.DisplayNameFor(m => m.appointments.FirstOrDefault().CustomerEmail)</th>
                <th>@Html.DisplayNameFor(m => m.appointments.FirstOrDefault().Confirmed)</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var i in Model.appointments)
            {
                <tr>
                    <td>@Html.DisplayFor(m => i.SalesPerson.Name)</td>
                    <td>@Html.DisplayFor(m => i.AppointmentDate)</td>
                    <td>@Html.DisplayFor(m => i.CustomerName)</td>
                    <td>@Html.DisplayFor(m => i.CustomerPhone)</td>
                    <td>@Html.DisplayFor(m => i.CustomerEmail)</td>
                    <td>@Html.DisplayFor(m => i.Confirmed)</td>
                    <td><partial name="_TableButtons" model="i.Id" /></td>
                </tr>
            }
        </table>
    </div>


    <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
         page-class="btn border" page-class-normal="btn btn-default active"
         page-class-selected="btn btn-primary active" class="btn-group m-1"></div>
</form>


@section Scripts{
<script>
        $(function () {
            $("#SearchDate").datepicker({
                minDate: +1,
                maxDate:"+3M"
            });
        });

</script>
}